<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/webalbum_status_layout"
        android:layout_gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/webalbum_status_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/webalbum_status_text"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    <GridView
        android:visibility="gone"
        android:id="@+id/webalbum_gridview"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:horizontalSpacing="2dip"
        android:verticalSpacing="16dip"
        android:scrollbarStyle="insideOverlay"
        android:columnWidth="@dimen/itemSize"
        android:numColumns="3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        </GridView>
</LinearLayout>